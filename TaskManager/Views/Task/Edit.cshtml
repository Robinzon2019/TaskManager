@model TaskManager.Models.Task

@{
    ViewData["title"] = "Editar Tarea";
}

<h1>Editar tarea</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-controller="Task" asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="mb-2">
        <label asp-for="Descripcion" class="form-label"></label>
        <input type="text" asp-for="Descripcion" class="form-control" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="FechaCreacion" class="form-label"></label>
        <input type="date" asp-for="FechaCreacion" class="form-control" />
        <span asp-validation-for="FechaCreacion" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Estado" class="form-label"></label>
        <input type="text" asp-for="Estado" class="form-control" />
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Prioridad" class="form-label"></label>
        <input type="number" asp-for="Prioridad" class="form-control" />
        <span asp-validation-for="Prioridad" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary"></button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
